{
  "name": "@dean0x/showme",
  "version": "0.1.0",
  "description": "MCP server providing ShowFile and ShowDiff tools for VS Code integration with syntax highlighting",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "showme-mcp": "./dist/index.js",
    "showme": "./dist/cli.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "dev:cli": "tsx src/cli.ts",
    "start": "node dist/index.js",
    "start:cli": "node dist/cli.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage .showme-temp",
    "prebuild": "npm run clean && npm run lint && npm run type-check"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.18.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.17.0",
    "tsx": "^4.20.0",
    "typescript": "^5.8.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "vscode",
    "git-diff",
    "claude-code",
    "development-tools"
  ],
  "author": "dean0x",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dean0x/showme.git"
  },
  "bugs": {
    "url": "https://github.com/dean0x/showme/issues"
  },
  "homepage": "https://github.com/dean0x/showme#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
